<div class="container m-5">
  <div class="row">
    <div class="col-md-3"></div>
    <h4 class="my-4"><span style="background-color:#EFEFEF">　ショッピングカート　</span></h4>
    <% if @cart_products.exists? %>
    <%= link_to "カートを空にする", public_cart_products_all_destroy_path, method: :delete, class: 'btn btn-danger' %>
    <table class="table table-hover table-inverse">
      <thead>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
        <th colspan="5"></th>
      </thead>
      <tbody>
        <% @cart_products.each do |cart_product| %>
        <tr>
          <td><%= cart_product.product.name %></td>
          <td><%= tax_price(cart_product.product.price).to_s(:delimited) %></td>
          <td>
            <%= form_with model: cart_product, url: public_cart_product_path(cart_product), local:true do |f| %>
              <%= f.select :quantity, options_for_select((1..10).to_a, selected: cart_product.quantity) %>
              <%= f.submit '変更', class: 'btn btn-success' %>
            <% end %>
          </td>
          <td><%= ((cart_product.product.price * 1.10).to_i * (cart_product.quantity).to_i).to_s(:delimited) %></td>
          <td><%= link_to "削除する", public_cart_product_path(cart_product.id), method: :delete, class: 'btn btn-danger' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
      <br><br>
      <h4>まだジャンルが追加されていません。</h4>
    <% end %>
    <%= link_to "情報入力に進む", new_public_order_path %>
    <%= link_to "買い物を続ける", public_products_path %>
  </div>
  <table class="table table-bordered col-4 ">
      <tr>
        <td>合計金額</td>
        <td><%= @total_price.floor.to_s(:delimited) %></td>
      </tr>
    </table>
</div>