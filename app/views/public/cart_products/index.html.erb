<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2><i class="fas fa-shopping-cart"></i>ショッピングカート</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_product.cart_products.each do |product| %>
            <tr>
              <td>
                <%= link_to public_product_path(product) do %>
                  <%= attachment_image_tag product, :image, form: 'jpeg', size:"50x50" %>
                <% end %>
              </td>
              <td>
                <%= product.price %>円
              </td>
              <td>
                <%= product.quantity %>
              </td>
              <td>
                <%= product.price*product.quantity %>
              </td>
              <td>
                <%= link_to "削除する", product_path(product.id), method: :delete, class:"btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>