<div calss="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">会員情報編集</h2>

    <% if @member.errors.any? %>
      <%= @member.errors.count %>件のエラーが発生しています。正しく情報を入力してください!
    <% end %>
    <%= form_with(model:@member, url:public_member_path(@member.id), local: true ,method: :put) do |f| %>
      <%#= render "layouts/error_messages", resource: @customer %>
      <div class="col-xs-10">
        <div class"form-group col-xs-12">
          <%= f.label :"氏名", class: "col-sm-3 control-label" %>
          <%= f.text_field :last_name, class: "last_name col-sm-2 form-control-static name" %>
          <%= f.text_field :first_name, class: "first_name col-sm-2 form-control-static name" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
          <%= f.text_field :last_name_kana, class: "last_name_kana col-sm-2 form-control-static name" %>
          <%= f.text_field :first_name_kana, class: "first_name_kana col-sm-2 form-control-static name" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"郵便番号", class: "col-sm-3 control-label" %>
          <%= f.text_field :postal_code, class: "col-sm-2 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"住所", class: "col-sm-3 control-label" %>
          <%= f.text_field :address, class: "col-sm-6 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
          <%= f.text_field :phone_number, class: "col-sm-2 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-2 form-control-static" %>
        </div>
      </div>
      <table class="table text-center col-11">
        <tr>
          <th><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></th>
          <th><%= link_to '退会する', public_members_withdrawal_path, class: "glyphicon glyphicon-tint btn btn-danger "%></th>
        </tr>
      </table>
    <% end %>
    <div class="text-center">
      <%= link_to "戻る", public_member_path(current_member), class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
  </div>
</div>