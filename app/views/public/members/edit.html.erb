<div class="center-block container">
  <div calss="row">
    <div class="col-xs-12">
      <h2 class="head-line title_h2 text-center">会員情報編集</h2>
      <% if @member.errors.any? %>
        <%= @member.errors.count %>件のエラーが発生しています。正しく情報を入力してください!
      <% end %>
      <%= form_with(model:@member, url:public_member_path(@member.id), local: true ,method: :put) do |f| %>
        <table class="col-12 table table-borderless">
          <tbody>
            <tr>
              <td>
                <%= f.label :"氏名", class: "col-xs-3 control-label" %>
              </td>
              <td>
                <%= f.text_field :last_name, class: "col-12 form-control-static name" %>
              </td>
              <td>
                <%= f.text_field :first_name, class: "col-12 form-control-static name" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.label :"フリガナ", class: "col-xs-3 control-label" %>
              </td>
              <td>
                <%= f.text_field :last_name_kana, class: "col-12 form-control-static name" %>
              </td>
              <td>
                <%= f.text_field :first_name_kana, class: "col-12 form-control-static name" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.label :"郵便番号", class: "col-xs-3 control-label" %>
              </td>
              <td>
                <%= f.text_field :postal_code, class: "col-12 form-control-static" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.label :"住所", class: "col-xs-3" %>
              </td>
              <td>
                <%= f.text_field :address, class: "col-12 form-control-static" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.label :"電話番号(ハイフンなし)", class: "col-xs-3 control-label" %>
              </td>
              <td>
                <%= f.text_field :phone_number, class: "col-12 form-control-static" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.label :"メールアドレス", class: "col-xs-3 control-label" %>
              </td>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12 form-control-static" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
              </td>
              <td>
                <%= link_to '退会する', public_members_withdrawal_path, class: "glyphicon glyphicon-tint btn btn-danger "%>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to "戻る", public_member_path(current_member), class: "glyphicon glyphicon-home btn btn-info" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>