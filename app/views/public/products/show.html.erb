<div class="shiba-background">
  <div class="container">
    <div class="row">
  		<div class="row align-items-center">
        <%= attachment_image_tag(@product, :image, size: "340x220", fallback: "no_image.jpg" ) %>
      </div>

      <div class="col-4 offset-1">
        <h2><%= @product.name %></h2><br>
        <h4><%= @product.description %></h4><br>
        <h3>¥ <%= tax_price(@product.price).to_s(:delimited) %>
          <span>(税込)</span>
        </h3><br>

        <% if @product.sale_status == true %>
          <% if @product.genre.is_valid == true %>
            <%= form_with model:@cart_product , url: public_cart_products_path, method: :post, local:true do |f| %>
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
            <% end %>
          <% else %>
            <h3>売り切れ中</h3>
          <% end %>
        <% elsif @product.sale_status == false %>
          <h3>売り切れ中</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>