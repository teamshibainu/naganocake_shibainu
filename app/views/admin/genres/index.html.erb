<div class="container m-5">
  <div class="row">
    <div class="col-md-3"></div>
    <h4 class="my-4"><span style="background-color:#EFEFEF">　ジャンル一覧・追加　</span></h4>
  </div>
  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <table class="col-5">
    <tr>
      <th>ジャンル名</th>
      <th><%= f.text_field :name %></th>
      <th><%= f.submit "新規登録", class: 'btn btn-success' %></th>
    </tr>
  </table>
  <% end %>
  <% if @genres.exists? %>
  <table class="table table-hover table-inverse">
    <thead>
      <th>ジャンル</th>
      <th colspan="2"></th>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
        <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: 'btn btn-danger' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <br><br>
    <h4>まだジャンルが追加されていません。</h4>
  <% end %>
</div>