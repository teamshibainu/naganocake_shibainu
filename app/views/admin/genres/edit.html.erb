<div class="container m-5">
  <div class="row">
    <div class="col-md-3"></div>
    <h4 class="my-4"><span style="background-color:#EFEFEF">　ジャンル編集　</span></h4>
  </div>
  <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
  <table class="col-5">
    <tr>
      <th>ジャンル名</th>
      <th><%= f.text_field :name %></th>
      <th class="action"><%= f.submit "変更を保存", class: 'btn btn-success' %></th>
    </tr>
  </table>
  <% end %>