<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1"></div>
    <h2>
      <%= @member.last_name %><%= @member.first_name %>さんの会員詳細
    </h2>
    <table class='table'>
      <tr>
        <th>会員ID</th>
        <th><%= @member.id %></th>
      </tr>
      <tr>
        <th>氏名</th>
        <th><%= @member.last_name %> <%= @member.first_name %></th>
      </tr>
      <tr>
        <th>フリガナ</th>
        <th><%= @member.last_name_kana %> <%= @member.first_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @member.postal_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @member.address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= @member.phone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @member.email %></th>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <th>
          <% if @member.withdrawal_flag == true %>
            有効
          <% else %>
            無効
          <% end %>
        </th>
      </tr>
    </table>
    <%= link_to "編集する", edit_admin_member_path(@member.id), class:"btn btn-sm btn-success" %>
    <%= link_to "注文履歴一覧を見る", public_orders_path(@member.id), class:"btn btn-sm btn-primary" %>
  </div>
</div>