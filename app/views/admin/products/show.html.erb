<div class="container">
  <div class="row">
	<h2 class="col align-self-start">商品詳細</h2>
	<div class="col-12">
      <div class="col text-center">
	      <%= attachment_image_tag(@product, :image, size: "300x220", fallback: "no_image.jpg") %>
      <div class="field">
        <p>
          商品名　　　　　<%= @product.name %>
	      </p>
	    </div><br>

	    <div class="field">
	      <p>
	        商品説明　　　　<%= @product.description %>
				</p><br>
	    </div>

	    <div class="field">
	      <p>
	        ジャンル　　　　<%= @product.genre.name %>
        </p><br>
	    </div>

	    <div class="field">
	      <p>
					税込価格　　　　<%= tax_price(@product.price).to_s(:delimited) %>
        								(<%= @product.price.to_s(:delimited) %>) 円<br>
					(税抜価格)
				</p><br>
	    </div>

	    <div class="field">
				<p>
					販売ステータス
	        <% if @product.sale_status == true %>
						販売中
					<% elsif @product.sale_status == false %>
						販売停止中
					<% end %>
				</p>
	    </div>

		  <div class="actions col-xs-9">
	      <%= link_to "編集する", edit_admin_product_path(@product), data: {"turbolinks" => false}, class: "glyphicon glyphicon-pencil btn btn-success pull-right" %>
      </div>
    </div>
  </div>
</div>